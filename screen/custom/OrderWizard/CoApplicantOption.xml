<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="Co-Applicant Option"
        default-menu-include="false"
        default-menu-index="7">

    <parameter name="orderId" required="true"/>
    <parameter name="orderPartSeqId" required="true"/>
    <parameter name="isUnsecured" required="true"/>

    <transition name="coApplicant">
        <default-response url="../CoApplicant">
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="isUnsecured"/>
        </default-response>
    </transition>
    <transition name="primaryApplicantEmployment">
        <actions>
            <entity-find-one entity-name="mantle.order.OrderPartParty" value-field="partyRole">
                <field-map field-name="orderId"/>
                <field-map field-name="orderPartSeqId"/>
                <field-map field-name="roleTypeId" value="PrimaryApplicant"/>
            </entity-find-one>
            <entity-find entity-name="mantle.party.PartyToAndRelationship" list="previousEmploymentRelationList">
                <econdition field-name="statusId" value="VerifiedEmployee"/>
                <econdition field-name="relationshipTypeEnumId" value="PrtPreviousEmployee"/>
                <econdition field-name="fromPartyId" from="partyRole?.partyId"/>
            </entity-find>
        </actions>
        <conditional-response url="../PrimaryApplicantEmploymentPrevious">
            <condition>
                <expression>previousEmploymentRelationList.size() > 0</expression>
            </condition>
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="isUnsecured"/>
        </conditional-response>
        <default-response url="../PrimaryApplicantEmployment">
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="isUnsecured"/>
        </default-response>
    </transition>
    <transition name="property">
        <default-response url="../Property">
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="isUnsecured"/>
        </default-response>
    </transition>
    <transition name="mortgage">
        <default-response url="../Mortgage">
            <parameter name="isUnsecured"/>
        </default-response>
    </transition>

    <widgets>
        <container-row>
            <row-col xs="0" sm="1" md="3" lg="3"/>
            <row-col xs="12" sm="10" md="6" lg="6">
                <container style="stepper margin-b-1">
                    <render-mode>
                        <text type="qvt"><![CDATA[
                            <q-stepper ref="stepper" value="s3" color="primary" :flat="true">
                                <q-step name="s1" title="Order Items" icon="shopping_cart"/>
                                <q-step name="s2" title="Eligibility" icon="policy"/>
                                <q-step name="s3" title="Applicants" icon="person"/>
                                <q-step name="s4" title="Property" icon="home"/>
                                <q-step name="s5" title="Agreements" icon="done"/>
                            </q-stepper>
                        ]]></text>
                    </render-mode>
                </container>
            </row-col>
            <row-col xs="0" sm="1" md="3" lg="3"/>
        </container-row>

        <container-row style="form-no-margin">
            <row-col xs="0" sm="1" md="3" lg="3"/>
            <row-col xs="12" sm="10" md="6" lg="6">
                <label text="Add Co-Applicant (Optional)" type="h5" style="margin-b-1"/>
                <label text="Co-applicant must reside in the property and be a spouse or be a co-owner of the property." style="margin-b-1"/>
                <container style="h-separator margin-tb-2"/>

                <container style="margin-b-2">
                    <link url="coApplicant" text="Add Co-Applicant" btn-type="default" icon="fa fa-plus"/>
                </container>

                <container-row>
                    <row-col xs="6" sm="6" md="6" lg="6" style="padding-all-0">
                        <link url="primaryApplicantEmployment" text="Back" style="text-black"/>
                    </row-col>
                    <row-col xs="6" sm="6" md="6" lg="6" style="padding-all-0 text-right">
                        <link condition="isUnsecured == 'false'" url="property" text="Continue" style="text-primary" btn-type="default" parameter-map="[orderId: orderId, orderPartSeqId: orderPartSeqId]"/>
                        <link condition="isUnsecured == 'true'" url="mortgage" text="Continue" style="text-primary" btn-type="default" parameter-map="[orderId: orderId, orderPartSeqId: orderPartSeqId]"/>
                    </row-col>
                </container-row>
            </row-col>
            <row-col xs="0" sm="1" md="3" lg="3"/>
        </container-row>
    </widgets>

</screen>
